<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Personal Report"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textIfnotsmoke"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="If you hadn't smoked ..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageSkull"
            android:layout_width="10dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/skull" />

        <TextView
            android:id="@+id/textYoucould"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="You could have lived 8760 more hours" />
    </LinearLayout>

    <TextView
        android:id="@+id/textIngredients"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Ingredients in cigarettes" />

    <ImageView
        android:id="@+id/imageIngredients"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        app:srcCompat="@drawable/ingredients" />

    <TextView
        android:id="@+id/textTips"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Tips - quiting smoking" />

    <ImageView
        android:id="@+id/imageTips"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        app:srcCompat="@drawable/tips" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_input_get" />

        <ImageButton
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_month" />

        <ImageButton
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <ImageButton
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_myplaces" />
    </LinearLayout>

</LinearLayout>